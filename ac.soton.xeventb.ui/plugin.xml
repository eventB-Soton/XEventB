<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="ac.soton.eventb.xtext.ui.XTextConvert"
            name="%XTextConvertName">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="ac.soton.xeventb.internal.ui.handlers.XTextConvertHandler"
            commandId="ac.soton.eventb.xtext.ui.XTextConvert">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="true"
            locationURI="popup:fr.systerel.explorer.navigator.view">
         <command
               commandId="ac.soton.eventb.xtext.ui.XTextConvert"
               label="%CamilleXConvertLabel"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <or>
                  <reference
                        definitionId="ac.soton.eventb.xtext.ui.isMachineRoot">
                  </reference>
                  <reference
                        definitionId="ac.soton.eventb.xtext.ui.isContextRoot">
                  </reference>
                  <reference
                        definitionId="ac.soton.eventb.xtext.ui.isProject">
                  </reference>
               </or>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="ac.soton.eventb.xtext.ui.isMachineRoot">
         <and>
            <count
                  value="1">
            </count>
            <iterate
                  operator="or">
               <instanceof
                     value="org.eventb.core.IMachineRoot">
               </instanceof>
            </iterate>
         </and>
      </definition>
      <definition
            id="ac.soton.eventb.xtext.ui.isContextRoot">
         <and>
            <count
                  value="1">
            </count>
            <iterate
                  operator="or">
               <instanceof
                     value="org.eventb.core.IContextRoot">
               </instanceof>
            </iterate>
         </and>
      </definition>
      <definition
            id="ac.soton.eventb.xtext.ui.isProject">
         <and>
            <count
                  value="1">
            </count>
            <iterate
                  operator="or">
               <instanceof
                     value="org.eclipse.core.resources.IProject">
               </instanceof>
            </iterate>
         </and>
      </definition>
   </extension>

   <extension
         point="org.eclipse.ui.commands">
      <command
            id="ac.soton.eventb.xtext.ui.Regenerate"
            name="%RegenerateName">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="ac.soton.xeventb.internal.ui.handlers.RegenerateHandler"
            commandId="ac.soton.eventb.xtext.ui.Regenerate">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="true"
            locationURI="popup:fr.systerel.explorer.navigator.view">
         <command
               commandId="ac.soton.eventb.xtext.ui.Regenerate"
               label="%RegenerateLabel"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <or>
                  <reference
                        definitionId="ac.soton.eventb.xtext.ui.isXMachine">
                  </reference>
                  <reference
                        definitionId="ac.soton.eventb.xtext.ui.isXContext">
                  </reference>
                  <reference
                        definitionId="ac.soton.eventb.xtext.ui.isProject">
                  </reference>
               </or>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="ac.soton.eventb.xtext.ui.isProject">
         <and>
            <count
                  value="1">
            </count>
            <iterate
                  operator="or">
               <instanceof
                     value="org.eclipse.core.resources.IProject">
               </instanceof>
            </iterate>
         </and>
      </definition>
      <definition
            id="ac.soton.eventb.xtext.ui.isXMachine">
         <and>
            <count
                  value="1">
            </count>
            <iterate
                  operator="or">
               <adapt
                     type="org.eclipse.core.resources.IResource">
                  <test
                        property="org.eclipse.core.resources.name"
                        value="*.bumx">
                  </test>
               </adapt>
            </iterate>
         </and>
      </definition>
      <definition
            id="ac.soton.eventb.xtext.ui.isXContext">
         <and>
            <count
                  value="1">
            </count>
            <iterate
                  operator="or">
               <adapt
                     type="org.eclipse.core.resources.IResource">
                  <test
                        property="org.eclipse.core.resources.name"
                        value="*.bucx">
                  </test>
               </adapt>
            </iterate>
         </and>
      </definition>
   </extension>
</plugin>
